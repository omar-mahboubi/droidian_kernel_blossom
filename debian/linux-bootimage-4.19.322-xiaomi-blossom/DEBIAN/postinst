#!/bin/bash

set -e

KERNEL_RELEASE="4.19.322-xiaomi-blossom"

if [ "$1" != configure ]; then
    exit 0
fi

depmod "${KERNEL_RELEASE}"

if [ -d "/etc/kernel/bootimage_postinst.d" ]; then
	DEB_MAINT_PARAMS="${*}" run-parts --report --exit-on-error --arg="${KERNEL_RELEASE}" /etc/kernel/bootimage_postinst.d
fi

exit 0
